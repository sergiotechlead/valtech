{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "lib": [
      "dom",
      "es2019",
      "ES2021.String"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "resolveJsonModule": true
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
